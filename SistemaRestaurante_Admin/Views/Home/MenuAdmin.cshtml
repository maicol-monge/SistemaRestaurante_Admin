@{
    ViewBag.Title = "Menú";
    Layout = "~/Views/Shared/LayoutPersonalizado.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Menú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/menuAdmin.css" asp-append-version="true" />
</head>
<body>
    <div>
        <div class="">
            <div class="d-flex justify-content-center my-5">
                <img class="imgScale" src="https://i.ibb.co/23wxdgmF/4.png" alt="Logo" />
            </div>
            <h1 class="text-center">Menú de Administración</h1>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <div class="d-flex flex-column p-3">
                <button onclick="location.href='@Url.Action("VerPlatos", "Platos")'" class="btn p-3 mb-3 btnMenu">Platos</button>
                <button onclick="location.href='@Url.Action("VerCombos", "Combos")'" class="btn p-3 mb-3 btnMenu">Combos</button>
                <button onclick="location.href='@Url.Action("VerPromociones", "Promociones")'" class="btn p-3 mb-3 btnMenu">Promociones</button>
            </div>
            <div class="d-flex flex-column p-3 justify-content-center">
                <button onclick="location.href='@Url.Action("VerEmpleados", "Empleados")'" class="btn p-3 mb-3 btnMenu">Empleados</button>
                <button onclick="location.href='@Url.Action("VerMenus", "Menu")'" class="btn p-3 mb-3 btnMenu">Menús</button>
            </div>
            <div class="d-flex flex-column p-3">
                <button onclick="location.href='@Url.Action("VerCrearCargos", "Cargos")'" class="btn p-3 mb-3 btnMenu">Cargos de Empleados</button>
                <button onclick="location.href='@Url.Action("VerCategorias", "Categorias")'" class="btn p-3 mb-3 btnMenu">Categorias de item</button>
                <button onclick="location.href='@Url.Action("VerGestionarMesas", "Mesas")'" class="btn p-3 mb-3 btnMenu">Mesas</button>
            </div>
        </div>
    </div>
</body>
</html>