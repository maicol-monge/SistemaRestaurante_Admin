@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/loginAdmin.css" asp-append-version="true" />

</head>
<body>
    <div class="d-flex" style="height: 100vh">
        <div class="col-md-6 d-none d-md-block" style="border: 1px solid black">
            <img src="https://i.ibb.co/PGp80w3d/login-1.png" height="100%" width="100%" alt="Alternate Text" />
        </div>
        <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center login-container" style="background-color: white">
            <div class="p-5 login-box" style="width: 75%;">
                <h1 class="mb-3" style="font-weight: bolder">Login</h1>
                <nav class="mb-5">Welcome back! Please login to your admin account.</nav>

                <form action="@Url.Action("Login", "Controlador")" method="post">
                    <div class="form-group d-flex flex-column my-5">
                        <label for="codigoEmpleado">Codigo de empleado</label>
                        <input type="text" class="form-control" placeholder="######-###" id="codigoEmpleado" name="codigoEmpleado" />
                    </div>
                    <div class="form-group d-flex flex-column my-5">
                        <label for="contrasena">Contraseña</label>
                        <input type="password" class="form-control inputPassword" placeholder="....................." id="contrasena" name="contrasena" />
                    </div>
                    <div class="form-group my-5">
                        <input type="checkbox" id="recordarme" name="recordarme" style="accent-color: #AB1918;" />
                        <label for="recordarme">Recordarme</label>
                    </div>
                    <button type="submit" class="btn btn-primary p-3" style="background-color: #AB1918; width: 100%; font-size: large"><b>Login</b></button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>