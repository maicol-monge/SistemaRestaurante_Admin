<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - SistemaRestauranteModuloAdmin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/layoutPersonalizado.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="custom-navbar p-3 mx-2 mx-md-5 mt-3 d-flex align-items-center justify-content-between">
            <div>
                <img src="https://i.ibb.co/cSjdMjN3/image.png" onclick="location.href='@Url.Action("VerMenuAdmin", "Home")'" style="height: 10vh; cursor: pointer" alt="Foodie Logo" class="logo-desktop" />
                <img src="https://i.ibb.co/23wxdgmF/4.png" onclick="location.href='@Url.Action("VerMenuAdmin", "Home")'" style="height: 8vh; cursor: pointer" alt="Foodie Mobile Logo" class="logo-mobile" />
            </div>

            <div class="dropdown">
                <div class="user-profile d-flex align-items-center dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                    <span>@Context.Session.GetString("NombreUsuario")</span>
                    <div class="user-icon mx-3">
                        <i class="bi bi-person-circle" style="font-size: 3rem"></i>
                    </div>
                </div>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Cerrar sesión</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="mx-2 mx-md-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
