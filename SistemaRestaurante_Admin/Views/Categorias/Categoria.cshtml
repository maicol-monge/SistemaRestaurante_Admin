@{
    ViewData["Title"] = "Gestionar Categorías";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-7 border-end">
            <h3>Gestionar Categorías</h3>
            <form>
                <div class="col-md-8 mb-3">
                    <label class="form-label fw-bold">Nombre de la categoría:</label>
                    <input type="text" class="form-control" placeholder="Nombre de la categoría" />
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-warning">Crear categoría</button>
                    <button type="button" class="btn btn-primary">Modificar categoría</button>
                    <button type="button" class="btn btn-danger">Eliminar categoría</button>
                </div>
                <button type="button" class="btn btn-outline-dark mt-5">Cancelar</button>
            </form>
        </div>
        <div class="col-md-5">
            <h3>Categorías</h3>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Pizzas</a>
                <a href="#" class="list-group-item list-group-item-action">Hamburguesas</a>
                <a href="#" class="list-group-item list-group-item-action">Malteadas</a>
                <a href="#" class="list-group-item list-group-item-action">Postres</a>
                <a href="#" class="list-group-item list-group-item-action">Entradas</a>
                <a href="#" class="list-group-item list-group-item-action">Ensaladas</a>
                <a href="#" class="list-group-item list-group-item-action">Bebidas</a>
            </div>
        </div>
    </div>
</div>

